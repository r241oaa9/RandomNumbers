<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EEEEEE"
    tools:context=".MainActivity">

    <!-- TITLE HEADER -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUCKY 6"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:letterSpacing="0.1"/>

    <!-- THE 6 TARGET NUMBERS (Styled like lottery balls) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:gravity="center">

            <!-- Using CardViews for the individual slots to make them rounded -->
            <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_weight="1" android:layout_height="50dp" app:cardCornerRadius="25dp" app:cardBackgroundColor="#F5F5F5" android:layout_margin="2dp">
                <TextView android:id="@+id/aID" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="-" android:textSize="20sp" android:textStyle="bold" android:textColor="#616161"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_weight="1" android:layout_height="50dp" app:cardCornerRadius="25dp" app:cardBackgroundColor="#F5F5F5" android:layout_margin="2dp">
                <TextView android:id="@+id/bID" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="-" android:textSize="20sp" android:textStyle="bold" android:textColor="#616161"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_weight="1" android:layout_height="50dp" app:cardCornerRadius="25dp" app:cardBackgroundColor="#F5F5F5" android:layout_margin="2dp">
                <TextView android:id="@+id/cID" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="-" android:textSize="20sp" android:textStyle="bold" android:textColor="#616161"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_weight="1" android:layout_height="50dp" app:cardCornerRadius="25dp" app:cardBackgroundColor="#F5F5F5" android:layout_margin="2dp">
                <TextView android:id="@+id/dID" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="-" android:textSize="20sp" android:textStyle="bold" android:textColor="#616161"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_weight="1" android:layout_height="50dp" app:cardCornerRadius="25dp" app:cardBackgroundColor="#F5F5F5" android:layout_margin="2dp">
                <TextView android:id="@+id/eID" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="-" android:textSize="20sp" android:textStyle="bold" android:textColor="#616161"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_weight="1" android:layout_height="50dp" app:cardCornerRadius="25dp" app:cardBackgroundColor="#F5F5F5" android:layout_margin="2dp">
                <TextView android:id="@+id/fID" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="-" android:textSize="20sp" android:textStyle="bold" android:textColor="#616161"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- MAIN GAME AREA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Name Input styled as a clean white card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="18sp"
                android:inputType="text"
                android:hint="Enter Player Name"
                android:background="@android:color/transparent"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

        <!-- THE ROLLING BALL (Circular CardView) -->
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/numID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="?"
                android:textSize="90sp"
                android:textStyle="bold"
                android:textColor="#E53935"/>
        </androidx.cardview.widget.CardView>

        <!-- Progress Counter -->
        <TextView
            android:id="@+id/countWinID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0 of 6 Matched"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#43A047"
            android:layout_marginBottom="24dp"/>

        <!-- BIG ROLL BUTTON -->
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#43A047"
            android:textColor="#FFFFFF"
            android:text="ROLL NUMBER"
            android:textSize="22sp"
            android:textStyle="bold"
            app:cornerRadius="35dp"
            android:elevation="4dp"/>

        <!-- BOTTOM CONTROLS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <!-- New Game -->
            <Button
                android:id="@+id/newGameID"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#FB8C00"
                android:textColor="#FFFFFF"
                android:text="Reset"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp"/>

            <!-- Score -->
            <Button
                android:id="@+id/ScoreID"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#1E88E5"
                android:textColor="#FFFFFF"
                android:text="Scores"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
